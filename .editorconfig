root = true

[*]
indent_style = space
indent_size = 4
tab_width = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
max_line_length = 120

[*.{js,ts,jsx,tsx,html,css,scss,sass,php}]
indent_style = tab

[*.{yml,yaml,json,txt}]
trim_trailing_whitespace = false
indent_size = 2

[Makefile]
indent_style = tab
